{
	"compilerOptions": {
		"target": "es5",
		"module": "amd",
    "moduleResolution": "node",
    "outFile": "lib/typedin.js",
    "declaration":  true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
    "noEmitHelpers": false,
		"lib": [ "es6", "dom" ]
	},
  "include": [
    "typings/**.*",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "node_modules"
  ],
	"compileOnSave": true
}
